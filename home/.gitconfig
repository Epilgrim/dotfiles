[user]
  name = Juan Peri
  email = eternoperegrino@gmail.com
[core]
  excludesfile = ~/.global_gitignore
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
  preloadindex = true
[push]
  default = simple
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
  co = checkout
  st = status -sb
[color]
  ui = true
[include]
  path = ./.gitconfig.local
[branch]
  autosetuprebase = always
